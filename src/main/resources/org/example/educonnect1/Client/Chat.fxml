<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.educonnect1.client.controllers.ChatController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Left side: Conversation list -->
    <left>
        <VBox prefWidth="300" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Messages" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <padding>
                    <Insets bottom="10"/>
                </padding>
            </Label>
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox fx:id="conversationsList" spacing="5"/>
            </ScrollPane>
        </VBox>
    </left>

    <!-- Right side: Chat area -->
    <center>
        <VBox style="-fx-background-color: white;">
            <!-- Chat header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #3498db; -fx-padding: 15px;">
                <ImageView fx:id="chatHeaderAvatar" fitWidth="40" fitHeight="40" preserveRatio="true"/>
                <Label fx:id="chatHeaderName" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>

            <!-- Search bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 10px; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" managed="false" visible="false" fx:id="searchBar">
                <Label text="ðŸ”" style="-fx-font-size: 16px;"/>
                <TextField fx:id="searchField" promptText="Search messages..." HBox.hgrow="ALWAYS"
                          style="-fx-padding: 5px 10px; -fx-background-radius: 15px; -fx-border-radius: 15px; -fx-border-color: #bdc3c7;"/>
                <Button text="âœ•" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d;" onAction="#onCloseSearch"/>
            </HBox>

            <!-- Messages area with scroll to bottom button -->
            <StackPane VBox.vgrow="ALWAYS">
                <ScrollPane fx:id="messagesScrollPane" fitToWidth="true"
                           style="-fx-background-color: #ecf0f1;">
                    <VBox fx:id="messagesContainer" spacing="10" style="-fx-padding: 15px;"/>
                </ScrollPane>
                
                <!-- Scroll to bottom button (positioned bottom-right) -->
                <Button fx:id="scrollToBottomButton" text="â†“" 
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 25px; -fx-font-size: 20px; -fx-min-width: 50px; -fx-min-height: 50px;"
                       visible="false" managed="false"
                       StackPane.alignment="BOTTOM_RIGHT" StackPane.margin="0 20 20 0"
                       onAction="#onScrollToBottom"/>
            </StackPane>

            <!-- Typing indicator -->
            <HBox fx:id="typingIndicatorBox" spacing="5" alignment="CENTER_LEFT" 
                  style="-fx-background-color: white; -fx-padding: 5px 15px;" 
                  visible="false" managed="false">
                <Label fx:id="typingLabel" text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
            </HBox>

            <!-- Message input area -->
            <HBox spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 10px; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
                <Button fx:id="attachButton" text="ðŸ“Ž" 
                       style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-cursor: hand;"
                       onAction="#onAttachFile"/>
                <Button fx:id="emojiButton" text="ðŸ˜Š" 
                       style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-cursor: hand;"
                       onAction="#onEmojiClick"/>
                <TextField fx:id="messageInput" promptText="Type a message..." HBox.hgrow="ALWAYS"
                          style="-fx-padding: 10px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-border-color: #bdc3c7;"
                          onKeyTyped="#onMessageTyping"/>
                <Button fx:id="searchButton" text="ðŸ”" 
                       style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 18px; -fx-cursor: hand;"
                       onAction="#onSearchClick"/>
                <Button fx:id="sendButton" text="Send" onAction="#onSendMessage"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 20px;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
